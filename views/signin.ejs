    </div>

    <div id="content">
        <div class="container">
            <h3 class="text-center">Login</h3>
            <div class="container-content-middle">
                <div class="form-group text-center">
                    <input type="text" placeholder="Email or Username" id="signin_account">
                </div>
                <div class="form-group text-center">
                    <input type="password" placeholder="Password" id="signin_password">
                </div>
                <div class="row">
                    <div class="remember-me">
                        <label><input data-val="true" data-val-required="The RememberMe field is required." type="checkbox" value="true">Remember me</label>
                    </div>
                    <div class="btn-login btn">
                        <input type="button" onclick="signIn()" value="Sign in">
                    </div>
                </div>
                <div class="forgot-my-password text-center">
                    <a href="#">I Forgot My Password</a>
                </div>
            </div>
        </div>
    </div>

